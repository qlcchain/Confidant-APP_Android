<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="QRCodeView">
        <!-- 扫描框距离toolbar底部的距离，默认值为90dp -->
        <attr format="dimension|reference" name="qrcv_topOffset"/>
        <!-- 扫描框边角线的宽度，默认值为3dp -->
        <attr format="dimension|reference" name="qrcv_cornerSize"/>
        <!-- 扫描框边角线的长度，默认值为20dp -->
        <attr format="dimension|reference" name="qrcv_cornerLength"/>
        <!-- 扫描框边角线的颜色，默认值为@android:color/white -->
        <attr format="color|reference" name="qrcv_cornerColor"/>
        <!-- 扫描框边角线显示位置(相对于边框)，默认值为中间 -->
        <attr name="qrcv_cornerDisplayType">
            <enum name="center" value="1"/>
            <enum name="inside" value="2"/>
        </attr>
        <!-- 扫描框的宽度，默认值为200dp -->
        <attr format="dimension|reference" name="qrcv_rectWidth"/>
        <!-- 条码扫样式描框的高度，默认值为140dp -->
        <attr format="dimension|reference" name="qrcv_barcodeRectHeight"/>
        <!-- 除去扫描框，其余部分阴影颜色，默认值为#33FFFFFF -->
        <attr format="color|reference" name="qrcv_maskColor"/>
        <!-- 扫描线的宽度，默认值为1dp -->
        <attr format="dimension|reference" name="qrcv_scanLineSize"/>
        <!-- 扫描线的颜色，默认值为@android:color/white -->
        <attr format="color|reference" name="qrcv_scanLineColor"/>
        <!-- 扫描线距离上下或者左右边框的间距，默认值为0dp -->
        <attr format="dimension|reference" name="qrcv_scanLineMargin"/>
        <!-- 是否显示默认的图片扫描线，默认值为false -->
        <attr format="boolean" name="qrcv_isShowDefaultScanLineDrawable"/>
        <!-- 扫描线的图片资源，默认值为null -->
        <attr format="reference" name="qrcv_customScanLineDrawable"/>
        <!-- 扫描边框的宽度，默认值为1dp -->
        <attr format="dimension|reference" name="qrcv_borderSize"/>
        <!-- 扫描边框的颜色，默认值为@android:color/white -->
        <attr format="color|reference" name="qrcv_borderColor"/>
        <!-- 扫描线从顶部移动到底部的动画时间，默认值为1000 -->
        <attr format="integer" name="qrcv_animTime"/>
        <!-- 扫描框中心点在屏幕垂直方向的比例，当设置此值时，会忽略 qrcv_topOffset -->
        <attr format="float" name="qrcv_verticalBias"/>
        <!-- Toolbar的高度，当有设置qrcv_isCenterVertical属性时，通过该属性来修正有Toolbar时导致扫描框垂直居中的偏差，默认值为0dp -->
        <attr format="dimension|reference" name="qrcv_toolbarHeight"/>
        <!-- 扫描框的样式是否为扫条形码样式，默认值为false -->
        <attr format="boolean" name="qrcv_isBarcode"/>
        <!-- 扫描二维码时的提示文案，默认值为null -->
        <attr format="string|reference" name="qrcv_qrCodeTipText"/>
        <!-- 扫描条码时的提示文案，默认值为null -->
        <attr format="string|reference" name="qrcv_barCodeTipText"/>
        <!-- 提示文案字体大小，默认值为14sp -->
        <attr format="dimension|reference" name="qrcv_tipTextSize"/>
        <!-- 提示文案颜色，默认值为@android:color/white -->
        <attr format="color|reference" name="qrcv_tipTextColor"/>
        <!-- 提示文案是否在扫描框的底部，默认值为false -->
        <attr format="boolean" name="qrcv_isTipTextBelowRect"/>
        <!-- 提示文案与扫描框之间的间距，默认值为20dp -->
        <attr format="dimension|reference" name="qrcv_tipTextMargin"/>
        <!-- 是否把提示文案作为单行显示，默认值为false -->
        <attr format="boolean" name="qrcv_isShowTipTextAsSingleLine"/>
        <!-- 是否显示提示文案的背景，默认值为false -->
        <attr format="boolean" name="qrcv_isShowTipBackground"/>
        <!-- 提示文案的背景色，默认值为#22000000 -->
        <attr format="color|reference" name="qrcv_tipBackgroundColor"/>
        <!-- 扫描线是否来回移动，默认值为true -->
        <attr format="boolean" name="qrcv_isScanLineReverse"/>
        <!-- 是否显示默认的网格图片扫描线，默认值为false -->
        <attr format="boolean" name="qrcv_isShowDefaultGridScanLineDrawable"/>
        <!-- 扫描线的网格图片资源，默认值为null -->
        <attr format="reference" name="qrcv_customGridScanLineDrawable"/>
        <!-- 是否只识别扫描框中的码，默认值为false -->
        <attr format="boolean" name="qrcv_isOnlyDecodeScanBoxArea"/>
        <!-- 是否显示定位点，默认值为false -->
        <attr format="boolean" name="qrcv_isShowLocationPoint"/>
        <!-- 码太小时是否自动缩放，默认值为false -->
        <attr format="boolean" name="qrcv_isAutoZoom"/>
    </declare-styleable>
    <item name="bgaqrcode_camera_preview" type="id"/>
</resources>